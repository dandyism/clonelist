<% unless defined? action %>
  <% action = request.fullpath %>
<% end %>

<form class="search clearfix" action="<%= action %>" method="get">
  <div class="search-wrapper clearfix">
    <label for="search-keywords">Keywords</label>
    <input id="search-keywords" class="search-keywords" type="search" value="" name="keywords">

    <button class="search-button">Search</button>
  </div>

  <fieldset class="search-price clearfix">
    <legend>price</legend>
    <label for="search-min-price">minimum price</label>
    <input id="search-min-price" type="text" value="" name="min_price" placeholder="min">

    <label for="search-max-price">maximum price</label>
    <input id="search-max-price" type="text" value="" name="max_price" placeholder="max">
  </fieldset>
</form>
