<header>
  <div class="container">
    <h1><%= link_to t('app_name'), root_url %></h1>
    <p class="site-description"><%= t 'site_description' %></p>
    <nav class="clearfix">
      <ul class="nav-list clearfix">
        <li class="nav-item"><%= link_to 'search', root_url %></li>
      <% if signed_in? %>
        <li class="nav-item"><%= link_to current_user.username || current_user.first_name, edit_user_registration_url %></li>
        <li class="nav-item"><%= link_to "manage ads", '#/manage' %></li>
        <% if can? :create, Post %>
          <li class="nav-item"><%= link_to 'post ad', new_post_url %></li>
        <% end %>
        <li class="nav-item"><%= button_to 'sign out', destroy_user_session_url, method: :delete %></li>
      <% end %>

      <% unless signed_in? %>
        <li class="nav-item"><%= link_to 'account', new_user_session_url %></li>
      <% end %>

      </ul>
    </nav>
  </div>
</header>
