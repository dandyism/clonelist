<!DOCTYPE html>
<html>
<head>
  <title>Clonelist</title>

  <!-- Mapbox -->
  <%= stylesheet_link_tag 'https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.css' %>
  <%= javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.js' %>

  <!-- Google Fonts -->
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Pacifico' %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <%= render partial: 'layouts/header' %>

  <% if flash[:notice] %>
    <div class="flash-notice"><%= flash[:notice] %></div>
  <% end %>

  <% if signed_in? %>
    <script id="user-data" type="application/json">
      <%= current_user.to_json.html_safe %>
    </script>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>
</div>

</body>
</html>
