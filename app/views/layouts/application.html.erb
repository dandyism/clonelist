<!DOCTYPE html>
<html>
<head>
  <title>Clonelist</title>

  <!-- Mapbox -->
  <%= stylesheet_link_tag 'https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.css' %>
  <%= javascript_include_tag 'https://api.tiles.mapbox.com/mapbox.js/v1.6.4/mapbox.js' %>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script type="text/javascript" src="//use.typekit.net/lyh4xfj.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
</head>
<body>

<div class="container">
  <%= render partial: 'layouts/header' %>

  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>

  <div id="content">
    <%= yield %>
  </div>
</div>

</body>
</html>
